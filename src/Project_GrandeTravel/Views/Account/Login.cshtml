@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="panel-primary col-xs-12 col-sm-offset-3 col-sm-6 col-md-offset-4 col-md-4">
        <div class="panel-heading text-center"><h3>Login</h3></div>
        <div class="panel-body">

            <form asp-controller="Account" asp-action="Login" role="form" method="post" asp-antiforgery="true" asp-route-returnurl="@Model.ReturnUrl">
                <div asp-validation-summary="ModelOnly">

                </div>

                <div class="row form-group">
                    <label asp-for="Username" class="col-xs-12 col-sm-4 control-label"></label>
                    <input asp-for="Username" class="col-xs-12 col-sm-8 form-control" autofocus />
                    <span class="col-xs-12" asp-validation-for="Username"></span>
                </div>

                <div class="row form-group">
                    <label asp-for="Password" class="col-xs-12 col-sm-4 control-label"></label>
                    <input asp-for="Password" class="col-xs-12 col-sm-8 form-control"/>
                    <span class="col-xs-12" asp-validation-for="Password"></span>
                </div>

                <div class="row">
                    <label asp-for="RememberMe"></label>
                    <input asp-for="RememberMe" />
                    <span class="col-xs-12" asp-validation-for="RememberMe"></span>
                </div>

                <div>
                    <input type="submit"class="btn btn-lg col-xs-6 col-sm-4 btn-success pull-right" value="Login" />
                </div>

            </form>
        </div>
    </div>
</div>