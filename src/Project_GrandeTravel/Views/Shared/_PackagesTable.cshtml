@model IEnumerable<Package>

<table class="table table-striped table-hover">
    <tr>
        <th>Name</th>
        <th>Location</th>
        <th colspan="2">Price</th>
    </tr>
    @if (Model.Count()!= 0)
    {
        foreach (var pack in Model)
        {
            <tr>
                <td>@pack.Name</td>
                <td>@pack.Location</td>
                <td>$@pack.Price</td>
                <td>
                    <a asp-controller="Package" asp-action="Update" asp-route-id="@pack.PackageId" class="btn btn-primary">Edit</a>
                    <p></p>
                    <a asp-controller="Package" asp-action="Display" asp-route-id="@pack.PackageId" class="btn btn-info">Details</a>
                </td>
            </tr>

        }
    }
    else
    {
        <tr>
            <td colspan="4">No package</td>
        </tr>
    }

</table>